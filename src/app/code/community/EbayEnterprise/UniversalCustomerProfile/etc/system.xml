<config>
	<tabs>
		<ebayenterprise translate="label" module="universalcustomerprofile">
			<label>eBay Enterprise</label>
			<sort_order>550</sort_order>
		</ebayenterprise>
	</tabs>
	<sections>
		<universal_customer_profile translate="label" module="universalcustomerprofile">
			<class>separator-top</class>
			<label>Universal Customer Profile</label>
			<tab>ebayenterprise</tab>
			<frontend_type>text</frontend_type>
			<sort_order>550</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label comment">
					<label>Settings</label>
					<comment><![CDATA[]]></comment>
					<frontend_type>text</frontend_type>
					<sort_order>100</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<store_id translate="label">
							<label>Store Id</label>
							<sort_order>30</sort_order>
							<frontend_type>text</frontend_type>
							<validate>validate-alphanum</validate>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</store_id>
					</fields>
				</general>
				<api translate="label">
					<label>Web Services</label>
					<frontend_type>text</frontend_type>
					<sort_order>6</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<hostname translate="label">
							<label>API Hostname</label>
							<sort_order>10</sort_order>
							<frontend_type>text</frontend_type>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</hostname>
						<key translate="label">
							<label>API Key</label>
							<sort_order>70</sort_order>
							<frontend_type>obscure</frontend_type>
							<validate>required-entry</validate>
							<backend_model>adminhtml/system_config_backend_encrypted</backend_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</key>
						<timeout translate="label">
							<label>API Timeout</label>
							<comment>Time in milliseconds</comment>
							<sort_order>80</sort_order>
							<frontend_type>text</frontend_type>
							<validate>validate-digits</validate>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</timeout>
						</inventory_expiration>
					</fields>
				</api>
			</groups>
		</universal_customer_profile>
	</sections>
</config>
