<config>
	<tabs>
		<ebayenterprise translate="label" module="ebayenterprise_riskinsight">
			<label>eBay Enterprise</label>
			<sort_order>550</sort_order>
		</ebayenterprise>
	</tabs>
	<sections>
		<ebayenterprise_riskinsight translate="label" module="ebayenterprise_riskinsight">
			<class>separator-top</class>
			<label>Risk</label>
			<tab>ebayenterprise</tab>
			<frontend_type>text</frontend_type>
			<sort_order>550</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<risk_insight  translate="label comment">
					<label>Risk Insight</label>
					<frontend_type>text</frontend_type>
					<sort_order>5</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</enabled>
						<store_id translate="label">
							<label>StoreId</label>
							<sort_order>2</sort_order>
							<frontend_type>text</frontend_type>
							<validate>validate-alphanum</validate>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</store_id>
						<hostname translate="label">
							<label>API Hostname</label>
							<sort_order>3</sort_order>
							<frontend_type>text</frontend_type>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</hostname>
						<key translate="label">
							<label>API Key</label>
							<sort_order>4</sort_order>
							<frontend_type>obscure</frontend_type>
							<validate>required-entry</validate>
							<backend_model>adminhtml/system_config_backend_encrypted</backend_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</key>
						<validate_api_connection translate="button_label">
							<label/>
							<sort_order>5</sort_order>
							<button_label>Test API Connection</button_label>
							<frontend_model>ebayenterprise_riskinsight/system_config_testapiconnection</frontend_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</validate_api_connection>
						<timeout translate="label">
							<label>API Timeout</label>
							<comment>Time in milliseconds</comment>
							<sort_order>6</sort_order>
							<frontend_type>text</frontend_type>
							<validate>validate-digits</validate>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</timeout>
						<debug translate="label">
							<label>Debug Mode</label>
							<comment>API Response and Requests are logged</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</debug>
						<order_source translate="label comment">
							<label>Order Source Override</label>
							<frontend_type>select</frontend_type>
							<source_model>ebayenterprise_riskinsight/system_config_source_ordersource</source_model>
							<sort_order>8</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</order_source>
						<response_actions type="label" translate="label">
							<label>Response Actions</label>
							<frontend_type>label</frontend_type>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<sort_order>9</sort_order>
						</response_actions>
						<high_action translate="label comment">
							<label>High</label>
							<frontend_type>select</frontend_type>
							<source_model>ebayenterprise_riskinsight/system_config_source_responseaction</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</high_action>
						<medium_action translate="label comment">
							<label>Medium</label>
							<frontend_type>select</frontend_type>
							<source_model>ebayenterprise_riskinsight/system_config_source_responseaction</source_model>
							<sort_order>11</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</medium_action>
						<low_action translate="label comment">
							<label>Low</label>
							<frontend_type>select</frontend_type>
							<source_model>ebayenterprise_riskinsight/system_config_source_responseaction</source_model>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</low_action>
						<unknown_action translate="label comment">
							<label>Unknown</label>
							<frontend_type>select</frontend_type>
							<source_model>ebayenterprise_riskinsight/system_config_source_responseaction</source_model>
							<sort_order>13</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</unknown_action>
					</fields>
				</risk_insight>
			</groups>
		</ebayenterprise_riskinsight>
	</sections>
</config>
